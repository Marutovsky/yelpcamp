<% include ./partials/header %>

<div class="row">
    <div class="col-md-12">
        <form class="form-signin" action="/login" method="POST">
            <h1 class="h1 mb-3 font-weight-normal text-center">Login</h1>
            <label for="username" class="sr-only">Username</label>
            <input class="form-control" type="text" id="username" name="username" placeholder="username" required autofocus>
            <label for="password" class="sr-only">Password</label>
            <input class="form-control" type="password" id="password" name="password" placeholder="password" required>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
        </form>
        <div class="form-signin">
            <a href="/campgrounds">Go Back</a>
            <a class="float-right" href="/forgot">Forgot Password</a>
        </div>
    </div>
</div>

<% include ./partials/footer %>